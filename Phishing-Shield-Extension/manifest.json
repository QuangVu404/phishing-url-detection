{
  "manifest_version": 3,
  "name": "AI Phishing Shield",
  "version": "1.0.0",
  "description": "Protect yourself from phishing websites.",
  "permissions": [
    "activeTab",
    "contextMenus",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>" 
  ],
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Check website safety",
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}